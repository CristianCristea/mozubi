<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Mozubi</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%#= stylesheet_pack_tag 'application', media: 'all' %> <!-- Uncomment if you import CSS in app/javascript/packs/application.js -->
    <link rel="icon" href="/../../images/favicon.ico">
  </head>
  <body>
    <div class="container-fluid">
      <div class="" style="display: flex;">

        <% if request.path != ( root_path || user_session_path ) %>
          <div class="sidebar" style="flex-grow: 1">
            <%= render 'shared/sidebar' %>
          </div>
        <% end %>
        <% if request.path =~ /#{articles_path}/ %>
          <div class="tree <%= articles_class? %> close-tree" style="flex-grow: 1">
            <%= render 'shared/test-tree' %>
          </div>
        <% end %>
        <div class="content" style="flex-grow: 2">
          <%= render 'shared/flashes' %>
          <%= yield %>
        </div>
      </div>
    </div>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>


