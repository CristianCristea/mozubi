<!-- a/b -->
<div class="row justify-content-center align-items-center flex-column">
  <div class="congrats-container">
    <div id="congrats">
      <h1 id="title"><%= @flashcards_percentage >= 50 ? "Sehr gut!" : "DAs hat leider nicht gereicht" %></h1>
    </div>
    <div class="flashcard-results">
      <h2>
        <span class="percentage-widget"><%= @flashcards_percentage %>% <i>richtig</i></span>
      </h2>


    </div>
  </div>

  <div class="flashcard-results-buttons mt-5">
    <%= link_to "Zurück zu Artikel", @article, class: "width-btn btn btn-outline-primary btn-lg" %>
    <%= link_to "Quiz wiederholen", @flashcard, class: "width-btn btn btn-outline-success btn-lg ml-5" %>
    <%= link_to "Nächster Artikel", @next_article, class: "width-btn btn btn-outline-primary btn-lg ml-5" %>
  </div>
</div>
