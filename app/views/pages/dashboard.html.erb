<div class="container-dashboard">
  <%= render "shared/top-bar" %>
    <div class="dashboard-cards">
        <div class="card card-progress-bar-left">
          <div class="card-dashboard-header">
            <h4 class="card-header-title">Agenda</h4>
            <i class="material-icons-sharp">local_library</i>
          </div>

          <div class="card-body card-dashboard-body text-center">
            <div class="card-body-main">
              <div class='card-body-title'>
                <p class='card-current-title-label'>Dein Thema ist:</p>
                <h3 class='card-current-title-title'><%= @current_topic.name %></h3>
              </div>
              <div class="todays-completionrate">
                <i><%= @article_index %></i>
                <abbr>von <strong><%= @current_topic.articles.count %></strong></abbr>
              </div>
            </div>
            <div class="card-body-topics">
              <% @current_topic.articles.each do |article| %>
                <div class="card-body-topic-title">
                  <%= article.title %>
                </div>
                <div class="card-body-topic-status">
                  <%= render inline: @not_read_articles.include?(article) ? '<i class="far fa-clock"></i>' : '<i class="fas fa-check"></i>' %>
                </div>
              <% end %>
            </div>

          </div>
          <div class="card-footer">
            <div class="card-text card-dashboard-text small-text">Gesamte Lesezeit: 13 Minuten</div>
            <%= link_to @current_article, class: "btn btn-secondary" do %>
              <div class="button-text">Nächster Artikel</div>
            <% end %>
          </div>
        </div> <!-- ./card -->
        <div class="dashboard-cards-right">
          <div class="card card-progress-bar-right">
            <div class="card-dashboard-header">
              <h4 class="card-header-title">Quiz</h4>
              <i class="material-icons-sharp fa-rotate-180">dynamic_feed</i>
            </div>

            <div class="card-body secondary-card">
              <span>87% <i>schon <br>richtig</i></span>
              <progress max="100" value="87"></progress>
            </div>
          </div> <!-- ./card -->
          <div class="card card-progress-bar-right">
            <div class="card-dashboard-header">
              <h4 class="card-header-title">Prüfungen</h4>
              <i class="material-icons-sharp">description</i>
            </div>

            <div class="card-body secondary-card">
              <span>65% <i>schon <br>richtig</i></span>
              <progress max="100" value="65"></progress>
            </div>
          </div> <!-- ./card -->
        </div>
    </div> <!-- ./row -->
</div>
