<%= render "shared/top-bar" %>
<div class="dashboard-cards">
    <div class="card card-progress-bar-left">
      <div class="card-header">
        <h4 class="card-header-title">Today's article</h4>
        <i class="fa fa-book card-title-icon" aria-hidden="true"></i>
      </div>

      <div class="card-body text-center">
        <div class="card-body-main">
          <div class='card-body-title'>
            <p class='card-current-title-label'>Your topic is:</p>
            <h3 class='card-current-title-title'><%= @current_topic.name %></h3>
          </div>
          <div class="round-progress-bar">
          <svg
            class="progress-ring"
            width="120"
            height="120">
            <circle
              class="progress-ring__circle"
              stroke="#6a5cf7"
              stroke-width="6"
              fill="transparent"
              r="52"
              cx="60"
              cy="60"/>
          </svg>
          </div>
        </div>
        <div class="card-body-topics">
          <% @current_topic.articles.each do |article| %>
            <div class="card-body-topic-title">
              <%= article.title %>
            </div>
            <div class="card-body-topic-status">
              <%= @not_read_articles.include?(article) ? 'read' : 'not read' %>
            </div>
          <% end %>
        </div>

      </div>
      <div class="card-footer">
        <div class="card-text">Reads: <%= @article_index %> / <%= @current_topic.articles.count %></div>
        <%= link_to  "Continue", @current_article, class: "btn btn-secondary" %>
      </div>
    </div> <!-- ./card -->
    <div class="dashboard-cards-right">
      <div class="card card-progress-bar-right">
        <div class="card-header">
          <h4 class="card-header-title">Flashcards</h4>
          <i class="fa fa-clone card-title-icon" aria-hidden="true"></i>
        </div>

        <div class="card-body text-center">
          <div class="round-progress-bar">
            <svg
              class="progress-ring"
              width="120"
              height="120">
              <circle
                class="progress-ring__circle"
                stroke="#6a5cf7"
                stroke-width="6"
                fill="transparent"
                r="52"
                cx="60"
                cy="60"/>
            </svg>
          </div>
<!--           <p class="card-title">Flashcards:</p>
          <p class="card-text"><%= @current_article.title %></p> -->
        </div>
      </div> <!-- ./card -->
      <div class="card card-progress-bar-right">
        <div class="card-header">
          <h4 class="card-header-title">Prep Exams</h4>
          <i class="fa fa-question card-title-icon" aria-hidden="true"></i>
        </div>

        <div class="card-body text-center">
          <div class="round-progress-bar">
            <svg
              class="progress-ring"
              width="120"
              height="120">
              <circle
                class="progress-ring__circle"
                stroke="#6a5cf7"
                stroke-width="6"
                fill="transparent"
                r="52"
                cx="60"
                cy="60"/>
            </svg>
          </div>
        </div>
      </div> <!-- ./card -->
    </div>
</div> <!-- ./row -->
