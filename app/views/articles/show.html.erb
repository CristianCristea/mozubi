<h1 align="center"><%= @article.title %></h1>


<!--Accordion wrapper-->
<div class="accordion md-accordion" id="accordionEx" role="tablist" aria-multiselectable="true">

  <!-- Accordion card -->
  <div class="card">

    <!-- Card header -->
    <div class="card-header" role="tab" id="headingOne1">
      <a data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne1" aria-expanded="true"
        aria-controls="collapseOne1">
        <h5 class="mb-0">Description<i class="fas fa-angle-down rotate-icon"></i>
        </h5>
      </a>
    </div>

    <!-- Card body -->
    <div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1"
      data-parent="#accordionEx">
      <div class="card-body">
        <p><%= @article.description %></p>
      </div>
    </div>

  </div>
  <!-- Accordion card -->

  <!-- Accordion card -->
  <div class="card">

    <!-- Card header -->
    <% @article.chapters.each do |chapter| %>

    <div class="card-header" role="tab" id="heading<%= chapter.id %>">
      <a class="collapsed" data-toggle="collapse" data-parent="#accordionEx" href="#collapse<%= chapter.id %>"
        aria-expanded="false" aria-controls="collapseTwo2">
        <h5 class="mb-0">
          <%= chapter.title %><i class="fas fa-angle-down rotate-icon"></i>
        </h5>
      </a>
    </div>

    <!-- Card body -->
    <div id="collapse<%= chapter.id %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= chapter.id %>"
      data-parent="#accordionEx">
      <div class="card-body">
        <p><%= chapter.content %></p>
      </div>
    </div>
    <% end %>


</div>
<!-- Accordion wrapper -->
