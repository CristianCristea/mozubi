<div class="container col-12 col-lg-9 mt-4">
  <div class="row mt-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item topic"><strong><%= @topic.name %></strong></li>
        <% @topic.articles.each do |article| %>
        <li class="breadcrumb-item"><%= link_to article.title, article_path(article) %></li>
        <% end %>
      </ol>
    </nav>


  </div>


  <h3 align="center" class="mb-4"><%= @article.title %></h3>
  <div class="row justify-content-center">

<!--Accordion wrapper-->
    <div class="accordion md-accordion" id="accordionEx" role="tablist" aria-multiselectable="true">

  <!-- Accordion card -->
      <div class="card">

    <!-- Card header -->
        <div class="card-header" role="tab" id="headingOne1">
          <a data-toggle="collapse" data-parent="#accordionEx" href="#collapseOne1" aria-expanded="true" aria-controls="collapseOne1">
          <h5 class="mb-0">Description<i class="fas fa-angle-down rotate-icon"></i>
          </h5>
          </a>
        </div>

    <!-- Card body -->
        <div id="collapseOne1" class="collapse show" role="tabpanel" aria-labelledby="headingOne1" data-parent="#accordionEx">
          <div class="card-body">
            <p><%= @article.description %></p>
          </div>
        </div>

      </div>
  <!-- Accordion card -->

  <!-- Accordion card -->
      <div class="card">

    <!-- Card header -->
        <% @article.chapters.each do |chapter| %>

          <div class="card-header" role="tab" id="heading<%= chapter.id %>">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordionEx" href="#collapse<%= chapter.id %>" aria-expanded="false" aria-controls="collapseTwo2">
            <h5 class="mb-0">
              <%= chapter.title %><i class="fas fa-angle-down rotate-icon"></i>
            </h5>
            </a>
          </div>

    <!-- Card body -->
        <div id="collapse<%= chapter.id %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= chapter.id %>" data-parent="#accordionEx">
          <div class="card-body">
            <p><%= chapter.content %></p>
          </div>
        </div>
        <% end %>
    </div>
  </div>
  <div class="row">

    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
      <label class="form-check-label" for="defaultCheck1">Mark as read</label>
    </div>

    <div class="text-right">
      <button type="button" class="btn btn-primary">Go to Flashcards</button>
    </div>
  </div>
</div>
