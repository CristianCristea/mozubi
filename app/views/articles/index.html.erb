                  <p class="card-carousel-header-title"><strong><%= article.title %></strong></p>
                  <p class='card-carousel-header-count'><%= index + 1 %> / <%= @articles_upcoming.count %></p>
                  <hr class="card-carousel-division py-1">
                  <p class="card-carousel-text"><%=h truncate(article.description, :length => 250) %></p>
                  <%= link_to "Continue", article, class: "btn carousel-btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="card-carousel-bottom">

            <div class="card-carousel-arrows">
              <a class="carousel-control-prev" href="#carouselMiddle" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"><i class="fas fa-chevron-left"></i></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselMiddle" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"><i class="fas fa-chevron-right"></i></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>

        </div>
      </div>

       <div class="col-sm-4">
        <div class="card-carousel">
          <div class="card-carousel-header">
            <div>
              <%= @articles_bookmarked.count %> Bookmarked
            </div>
            <div>
              <i class="far fa-bookmark"></i>
            </div>
          </div>
          <div id="carouselRight" class="carousel">
            <div class="carousel-inner">
              <% @articles_bookmarked.each_with_index do |article, index| %>
                <div class="carousel-item <%= index == 0 ? 'active' : '' %> ">
                  <p class="card-carousel-header-title"><strong><%= article.title %></strong></p>
                  <p class='card-carousel-header-count'><%= index + 1 %> / <%= @articles_upcoming.count %></p>
