                  <%= link_to "Read again", article, class: "btn carousel-btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="card-carousel-bottom">

            <div class="card-carousel-arrows">
              <a class="carousel-control-prev" href="#carouselRight" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"><i class="fas fa-chevron-left"></i></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselRight" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"><i class="fas fa-chevron-right"></i></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
